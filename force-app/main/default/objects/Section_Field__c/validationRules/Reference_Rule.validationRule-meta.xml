<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reference_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Type__c, &quot;Reference&quot;),
    ISBLANK(Reference_Object__c)
)</errorConditionFormula>
    <errorDisplayField>Reference_Object__c</errorDisplayField>
    <errorMessage>Reference Object should be filled!</errorMessage>
</ValidationRule>
